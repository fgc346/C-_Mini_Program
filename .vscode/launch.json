    "version": "0.2.0",
    "configurations": [

        {
            "name": "C++(gdb) Launch",
            "preLaunchTask": "cppdbg",  // 执行在task.json中设定的cppdbg编译指令
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": ["/home/erma/Projects/C++_Mini_Program/graph/tinyG.txt", "0"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}